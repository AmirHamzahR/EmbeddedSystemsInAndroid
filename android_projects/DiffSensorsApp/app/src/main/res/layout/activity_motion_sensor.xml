<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotionSensor">

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="454dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043">

        <EditText
            android:id="@+id/motionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Motion Sensor" />

        <TextView
            android:id="@+id/acc_Xaxis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acc_Xaxis" />

        <TextView
            android:id="@+id/acc_Yaxis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acc_Yaxis" />

        <TextView
            android:id="@+id/acc_Zaxis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acc_Zaxis" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>